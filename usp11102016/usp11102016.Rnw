# OBJETIVO: Fazer uma análise do pib brasileiro e gerar uma previsão. 

### Último dado

ultima <- as.Date('2016-06-01')

## Pacotes

library(BMR)
library(xtable)
library(TStools)

## Importação da planilha com os números índices do pib. 

pib <- read.csv2('pib.csv', header=T, sep=';', dec=',',
                 skip=4)

pib <- pib[-nrow(pib),-1]

pib_sa <- read.csv2('pib_sa.csv', header=T, sep=';',
                    dec=',', skip=4)

pib_sa <- pib_sa[-nrow(pib_sa),-1]

### Renomear séries

colnames(pib) <- c('Agro', 'Ind', 'Serv', 'PIB',
                   'Consumo', 'Governo', 'FBCF',
                   'Exportação', 'Importação')

colnames(pib_sa) <- c('Agro', 'Ind', 'Serv', 'PIB',
                      'Consumo', 'Governo', 'FBCF',
                      'Exportação', 'Importação')

### Transformar em série temporal

pib <- ts(pib, start=c(1996,1), freq=4)

